<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:padding="@dimen/container_margin">

    <TextView
        android:id="@+id/item_dessert_label_letter"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="C"
        android:textColor="@color/cardview_dark_background"
        android:textSize="42sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="@dimen/container_margin"
        android:layout_toRightOf="@id/item_dessert_label_letter">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/container_margin">

            <TextView
                android:id="@+id/item_dessert_label_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cupcake"
                android:textAppearance="?android:textAppearanceSmall"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_dessert_label_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Cupcake"
                android:textAppearance="?android:textAppearanceSmall" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
