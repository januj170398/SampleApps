<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".retrofit.activity.RetrofitGetActivity">


    <Button
        android:id="@+id/retrofit2_btn_async"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asynchronous request" />

    <Button
        android:id="@+id/retrofit2_btn_sync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Synchronous request" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/retrofit2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
